@model QLWebsite.Models.SanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Chỉnh sửa sản phẩm</h3>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>SanPham</h4>
                    <hr />
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.MaSP)

                    <div class="form-group">
                        @Html.LabelFor(model => model.TenSP, "Tên sản phẩm", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenSP)
                            @Html.ValidationMessageFor(model => model.TenSP)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LoaiSP, "Loại sản phẩm", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("LoaiSP", String.Empty)
                            @Html.ValidationMessageFor(model => model.LoaiSP)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.GiaBan, "Giá bán", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.GiaBan)
                            @Html.ValidationMessageFor(model => model.GiaBan)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaDanhMuc, "Danh mục", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("MaDanhMuc", String.Empty)
                            @Html.ValidationMessageFor(model => model.MaDanhMuc)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SLTon, "Số lượng tồn", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SLTon)
                            @Html.ValidationMessageFor(model => model.SLTon)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NhaSanXuat, "Nhà xuất bản", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NhaSanXuat)
                            @Html.ValidationMessageFor(model => model.NhaSanXuat)
                        </div>
                    </div>

                    @*<div class="form-group">
                        @Html.LabelFor(model => model.NgayCapNhat, "Ngày cập nhật", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NgayCapNhat)
                            @Html.ValidationMessageFor(model => model.NgayCapNhat)
                        </div>
                    </div>*@

                    <div class="form-group">
                        @Html.LabelFor(model => model.MoTa, "Mô tả", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MoTa)
                            @Html.ValidationMessageFor(model => model.MoTa)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.HinhAnh, "Hình ảnh", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HinhAnh)
                            @Html.ValidationMessageFor(model => model.HinhAnh)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
