@model PagedList.IPagedList<QLWebsite.Models.BaiPost>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div><a href="/Admin/BaiPost/Create"><p align="center" style="font-size:23px; margin-top:6px; border:solid 1px black">Thêm</p></a></div>
            <div class="panel-heading">
                <h3>Danh sách bản tin trên diễn đàn</h3>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-donHangNCC">
                        <thead>
                            <tr>
                                <th>
                                    Mã
                                </th>
                                <th>
                                    Nội dung
                                </th>

                                <th>
                                    Công cụ
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaPost)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoiDung)......
                                    </td>

                                    <td>
                                        @Html.ActionLink("Xem", "Details", new { id = item.MaPost }) |
                                        <a href="/Admin/BinhLuanBaiPost/Index/?id=@item.MaPost">Bình luận</a> |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaPost })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <div class="panel-body">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>

