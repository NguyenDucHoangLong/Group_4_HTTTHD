@model QLWebsite.Models.BaiPost

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Thêm bản tin mới</h3>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    
                    <hr />
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.NoiDung, "Nội dung", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NoiDung)
                            @Html.ValidationMessageFor(model => model.NoiDung)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.HinhAnh, "Hình ảnh", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HinhAnh)
                            @Html.ValidationMessageFor(model => model.HinhAnh)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NguoiPost, "Người Post", new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("NguoiPost", String.Empty)
                            @Html.ValidationMessageFor(model => model.NguoiPost)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Thêm" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
