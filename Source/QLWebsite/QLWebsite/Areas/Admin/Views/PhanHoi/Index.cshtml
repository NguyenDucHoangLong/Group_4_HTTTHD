@model PagedList.IPagedList<QLWebsite.Models.PhanHoi>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Danh sách phản hồi từ khách hàng</h3>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <form action="/Admin/PhanHoi/Fillter" method="post">
                    <select name="chude">
                        <option value="Tất cả">Tất cả</option>
                        <option value="Chất lượng sản phẩm">Chất lượng sản phẩm</option>
                        <option value="Dịch vụ giao hàng">Dịch vụ giao hàng</option>
                        <option value="Dịch vụ thanh toán">Dịch vụ thanh toán</option>
                        <option value="Dịch vụ hậu mãi">Dịch vụ hậu mãi</option>
                        <option value="Chương trình khuyến mãi">Chương trình khuyến mãi</option>
                    </select>
                    <input type="submit" value="Lọc" />
                </form>
                <br />
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-donHangNCC">
                        <thead>
                            <tr>
                                <th>
                                    STT
                                </th>
                                <th>
                                    Chủ để
                                </th>
                                <th>
                                    Nội dung
                                </th>
                                <th>
                                    Công cụ
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 0;}
                            @foreach (var item in Model)
                            {
                                i = i + 1;
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ChuDe)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoiDung)....
                                    </td>
                                    <td>
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaPhanHoi }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaPhanHoi })
                                    </td>
                                </tr>
                            }

                    </table>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <div class="panel-body">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>

