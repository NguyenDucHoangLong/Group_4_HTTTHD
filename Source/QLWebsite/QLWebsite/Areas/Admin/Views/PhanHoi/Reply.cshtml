@{
    ViewBag.Title = "Reply";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}
<script src=" ~/Scripts/jquery-2.1.4.intellisense.js"></script>
<script src=" ~/Scripts/jquery-2.1.4.js"></script>
<script src=" ~/Scripts/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
    function SendMail() {
        $.post("/Admin/PhanHoi/SendMail", { "mapost": $('#mapost').val(), "email": $('#email').val(), "chude": $('#chude').val(), "noidung": $('#noidung').val() },
            function (data) {
                if (data.Code == '1') {
                    alert('Gửi thư thành công');
                    window.location = '/Admin/PhanHoi';
                }
                if (data.Code == '0') {
                    alert(data.Mgs)
                }
            });
            return false;
    };
</script>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Soạn thư trả lời</h3>
            </div>
            <hr />
            <form action="/Admin/PhanHoi/SendMail" method="post">
                <div class="form-horizontal">
                    <div class="form-group">
                        <input type="hidden" id="mapost" value="@ViewData["MaPost"]"/>
                        <label class="control-label col-md-2">Email</label>
                        <div class="col-md-10">
                            <input type="email" name="email" id="email" value="@ViewData["Email"]" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Chủ đề</label>
                        <div class="col-md-10">
                            <input type="text" name="chude" id="chude" value="@ViewData["ChuDe"]" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Nội dung</label>
                        <div class="col-md-10">
                            <input type="text" name="noidung" id="noidung" height="50" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input type="submit" name="Gửi" onclick="return SendMail();"/>
                        </div>
                    </div>
                </div>
            </form>
            <p>
                @Html.ActionLink("Quay lại", "Index")
            </p>
        </div>
    </div>
</div>

