@model PagedList.IPagedList<QLWebsite.Models.BinhLuanBaiPost>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Danh sách các bình luận</h3>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-donHangNCC">
                        <thead>
                            <tr>
                                <th>
                                    STT
                                </th>
                                <th>
                                    Nội dung bình luận
                                </th>
                                <th>
                                    Tài khoản
                                </th>
                                <th>
                                    Công cụ
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 0;}
                            @foreach (var item in Model)
                            {
                                i = i + 1;
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoiDungBinhLuan)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TaiKhoan.TenTaiKhoan)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Khóa", "Edit", new { mapost=@item.MaPost, manguoi=@item.NguoiBinhLuan, thoigian=@item.ThoiGianBinhLuan }) |
                                        @Html.ActionLink("Xóa", "Delete", new { mapost = @item.MaPost, manguoi = @item.NguoiBinhLuan, thoigian = @item.ThoiGianBinhLuan })
                                    </td>
                                </tr>
                            }

                    </table>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <div class="panel-body">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>

