@model QLWebsite.Models.DonHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Cập nhật trạng thái đơn hàng</h3>
            </div>
            <form action="/Admin/DonHang/Edit" method="post">
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.MaDH)

                    <div class="form-group">
                        <label class="control-label col-md-2"> Ngày lập</label>
                        <div class="col-md-10">
                            <input type="text" name="NgayLap" value="@Model.NgayLap" readonly="readonly" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ngày giao</label>
                        <div class="col-md-10">
                            <input type="text" name="NgayGiao" value="@Model.NgayGiao" readonly="readonly" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Địa chỉ giao</label>
                        <div class="col-md-10">
                            <input type="text" name="DiaChiGiao" value="@Model.DiaChiGiao" readonly="readonly" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Trạng thái</label>
                        <div class="col-md-10">
                            <input type="text" name="TinhTrangDonHang" value="@Model.TinhTrangDonHang" />
                        </div>
                    </div>

                    <input type="hidden" name="DaThanhToan" value="@Model.DaThanhToan" />

                    <input type="hidden" name="TongTien" value="@Model.TongTien" />
                    <div class="form-group">
                        <label class="control-label col-md-2">Khách hàng</label>
                        <div class="col-md-10">
                            @Html.DropDownList("MaKH", String.Empty)
                            @Html.ValidationMessageFor(model => model.MaKH)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
