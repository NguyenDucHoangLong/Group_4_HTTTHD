@model PagedList.IPagedList<QLWebsite.Models.DonHang>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Danh sách đơn hàng</h3>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <form action="/Admin/DonHang/Fillter" method="post">
                    <select name="trangthai">
                        <option value="0">Tất cả</option>
                        <option value="1">Mới tạo</option>
                        <option value="2">Đang chờ giao</option>
                        <option value="3">Đã giao</option>
                        <option value="4">Đã hủy</option>
                    </select>
                    <input type="submit" value="Lọc" />
                </form>
                <br />
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-donHangNCC">
                        <thead>
                            <tr>
                                <th>MãĐH</th>
                                <th>Ngày giao</th>
                                <th>Địa chỉ giao</th>
                                <th>Trạng thái</th>
                                <th>Tổng tiền</th>
                                <th>Công cụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.MaDH">
                                    <td>@item.MaDH</td>
                                    <td>@item.NgayGiao</td>
                                    <td>@item.DiaChiGiao</td>
                                    @if(@item.TinhTrangDonHang==1)
                                    {
                                        <td>Mới tạo</td>
                                    }
                                    @if (@item.TinhTrangDonHang == 2)
                                    {
                                        <td>Đang chờ giao</td>
                                    }
                                    @if (@item.TinhTrangDonHang == 3)
                                    {
                                        <td>Đã giao</td>
                                    }
                                    @if (@item.TinhTrangDonHang == 4)
                                    {
                                        <td>Đã hủy</td>
                                    }
                                    <td>@item.TongTien</td>
                                    <td>
                                        <a href="/Admin/CTDH/Index/@item.MaDH">Chi tiết</a>&nbsp;|&nbsp;
                                        <a href="/Admin/Donhang/Edit/@item.MaDH">Cập nhật trạng thái</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <div class="panel-body">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>
