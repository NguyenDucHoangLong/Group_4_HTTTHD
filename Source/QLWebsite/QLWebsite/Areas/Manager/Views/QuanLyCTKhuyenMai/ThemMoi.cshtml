@model QLWebsite.Models.CTKhuyenMai

@{
    ViewBag.Title = "ThemMoi";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerDefault.cshtml";
}
<br/>
<h2>Thêm mới chương trình khuyến mãi</h2>


@using (Html.BeginForm(Url.Action("ThemMoi", "QuanLyCTKhuyenMai")))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        
        <div class="form-group">
            <label class="control-label col-md-2">
                Tên CT khuyến mãi
                </label>
                <div class="col-md-10">
                    <input type="text" name="TenCTKM" />
                </div>
</div>

        <div class="form-group">
            <label class="control-label col-md-2">
                Ngày bắt đầu
                </label>
                <div class="col-md-10">
                    <input type="date" name="ngayBD" />
                </div>
</div>

        <div class="form-group">
            <label class="control-label col-md-2">
                Ngày kết thúc
                </label>
                <div class="col-md-10">
                    <input type="date" name="ngayKT" />
                </div>
</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
