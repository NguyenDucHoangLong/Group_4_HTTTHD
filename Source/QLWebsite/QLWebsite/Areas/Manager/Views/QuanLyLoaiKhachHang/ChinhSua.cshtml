@model QLWebsite.Models.LoaiKH

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerDefault.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br/>
        <h4>Cập nhật thông tin loại khách hàng</h4>
        <hr />
        <input type="hidden" value="@Model.MaCapBac" name="MaCapBac" />

        <div class="form-group">
            <label class = "control-label col-md-2">Tên loại khách hàng</label>
            <div class="col-md-10">
                <input type="text" value="@Model.TenCapBac" name="TenCapBac"/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Chiết khấu</label>
            <div class="col-md-10">
                <input type="text" value="@Model.ChietKhau" name="ChietKhau" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày áp dụng</label>
            <div class="col-md-10">
                <input type="date" value="@Model.NgayApDung" name="NgayApDung" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
