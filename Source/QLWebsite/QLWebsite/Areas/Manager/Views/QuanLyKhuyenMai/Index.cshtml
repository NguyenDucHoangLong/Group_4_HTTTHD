@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<QLWebsite.Models.CTKhuyenMai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerDefault.cshtml";
}

<br />
<p>
    @Html.ActionLink("Thêm mới chương trình khuyến mãi", "Thêm mới")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaKM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SanPham.TenSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ChietKhau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NgayBD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NgayKT)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaKM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SanPham.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChietKhau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayBD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayKT)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { @maKM = item.MaKM}) |
            @Html.ActionLink("Chi tiết", "ChiTiet", new { @maKM = item.MaKM }) |
            @Html.ActionLink("Xóa", "Xoa", new { @maKM = item.MaKM })
        </td>
    </tr>
}

</table>
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>