@model QLWebsite.Models.CTKhuyenMai

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Areas/Manager/Views/Shared/_ManagerDefault.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <br/>
        <h4>Cập nhật chương trình khuyến mãi</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaKM)

        @Html.HiddenFor(model => model.MaSP)

        <div class="form-group">
            <label class="control-label col-md-2">Tên sản phẩm</label>
            <div class="col-md-10">
                @Model.SanPham.TenSP
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Chiết khấu</label>
            <div class="col-md-10">
                <input  value="@Model.ChietKhau" name="ChietKhau"/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày bắt đầu</label>
            <div class="col-md-10">
               <input type="date" value="@Model.NgayBD" name="NgayBD"/>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày kết thúc</label>
            <div class="col-md-10">
                <input type="date" value="@Model.NgayKT" name="NgayKT"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
